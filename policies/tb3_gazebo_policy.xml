<?xml version="1.0" encoding="UTF-8"?>
<policy version="0.2.0"
  xmlns:xi="http://www.w3.org/2001/XInclude">
  <enclaves>
    <enclave path="/gazebo">
      <profiles>
        <xi:include href="gazebo_profiles.xml"
          xpointer="xpointer(/profiles/*)"/>
        <xi:include href="turtlebot3_profiles.xml"
          xpointer="xpointer(/profiles/*)"/>
      </profiles>
    </enclave>
    <enclave path="/teleop">
      <profiles>
        <profile node="teleop_keyboard" ns="/">
          <xi:include href="common/node.xml"
            xpointer="xpointer(/profile/*)"/>
          <topics publish="ALLOW">
            <topic>cmd_vel</topic>
          </topics>
        </profile>
      </profiles>
    </enclave>
    <enclave path="/nav2_map">
      <profiles>
        <xi:include href="nav2_profiles.xml"
          xpointer="xpointer(/profiles/*)"/>
        <xi:include href="map_profiles.xml"
          xpointer="xpointer(/profiles/*)"/>
        <xi:include href="rviz2_profiles.xml"
          xpointer="xpointer(/profiles/*)"/>
      </profiles>
    </enclave>
    <enclave path="/nav2_slam">
      <profiles>
        <xi:include href="nav2_profiles.xml"
          xpointer="xpointer(/profiles/*)"/>
        <xi:include href="rviz2_profiles.xml"
          xpointer="xpointer(/profiles/*)"/>
        <xi:include href="slam_profiles.xml"
          xpointer="xpointer(/profiles/*)"/>
      </profiles>
    </enclave>
    <enclave path="/">
      <profiles>
        <profile node="root" ns="/">
          <services reply="ALLOW" request="ALLOW">
            <service>*</service>
          </services>
          <topics publish="ALLOW" subscribe="ALLOW">
            <topic>*</topic>
          </topics>
        </profile>
      </profiles>
    </enclave>
  </enclaves>
</policy>
